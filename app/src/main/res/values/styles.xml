<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="TextTopBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/topbarMarging10</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textSizeTopbar</item>
    </style>

    <style name="ImageTopbar">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_height">@dimen/topbarImageHeight</item>
        <item name="android:layout_width">@dimen/topbarImageWidth</item>
        <item name="android:layout_marginRight">@dimen/topbarMarging10</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="TextTop">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/textNull</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/textWeekDataSize</item>
    </style>
    <!-- 以上为通用-->
    <style name="LayoutBg">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/marging20</item>
        <item name="android:background">@drawable/layoutbg</item>
    </style>

    <style name="TopText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/textView1MarginTop</item>
        <item name="android:textSize">@dimen/textView1SizeTop</item>
        <item name="android:textColor">@color/colorTextColor</item>
    </style>

    <style name="ImageIcon">
        <item name="android:layout_width">@dimen/imageViewWidthHeight</item>
        <item name="android:layout_height">@dimen/imageViewWidthHeight</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginTop">@dimen/imageViewMarginTop</item>
    </style>

    <style name="LayoutStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="FirstLayout" parent="LayoutStyle">
        <item name="android:layout_marginBottom">@dimen/bottom1LayoutMarginBot</item>
    </style>

    <style name="SecondLayout" parent="LayoutStyle">
        <item name="android:layout_marginBottom">@dimen/bottom2LayoutMarginBot</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/textView2MarginLeft</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="SecondText" parent="TextStyle">
        <item name="android:textSize">@dimen/textView2TextSize</item>
    </style>

    <style name="ThirdText" parent="TextStyle">
        <item name="android:textSize">@dimen/textView3TextSize</item>
    </style>

    <style name="SwitchText">
        <item name="android:gravity">center</item>
        <item name="android:layout_height">@dimen/switchHeightWidth</item>
        <item name="android:layout_width">@dimen/switchHeightWidth</item>
        <item name="android:background">@drawable/switch_bg</item>
        <item name="android:textSize">@dimen/switchTextSize</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
</resources>
